<% provide(:title, 'Question') %>
<h1> Add Question </h1> 
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@question) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%=f.label :Subject %>
			<%= f.select :subject_id, options_from_collection_for_select(@subjects, 'id', 'title')	%> </br>
			<%= f.label :content  %>
			<%= f.text_area :content , class: 'form-control' %>
			<%= f.radio_button :question_type, 1 %> 
		  <%= label :question_type, 'multiple choice' %>
		  <%= f.radio_button :question_type, 2 %>
		  <%= label :question_type, 'multiple check'%>
		  <%= f.radio_button :question_type, 3 %>
		  <%= label :question_type, 'short answer'%>
			<%= f.submit "Create Question", class: "btn btn-primary" %>
		<% end %>	
	</div>	
</div>