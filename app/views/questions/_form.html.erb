			| <%= link_to " short answer ",new_question_path(type: 'short') , remote: true %>

		  <%# f.text_area :content,:cols => "50", placeholder: "Create new question here..." %>
	  	<div>
	  		<div id="short-answer">
	  			<%= render inline: "" %>
	  		</div>
	  		<div id="radio-answer">
		  		<%= render inline: "" %>	
		  	</div>	
		  	<div id="multi-answer">  	
		  		<%= render inline: "" %>
		  	</div>
	  	</div>
			<%= submit_tag "Save", class: "btn btn-primary" %>
		<% end %>	
	</div>	
</div>
