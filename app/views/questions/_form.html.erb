<% provide(:title, 'Question') %>
<h1> Add Question </h1> 
<!-- <div class="row"> -->
<div class="col-md-6 col-md-offset-3">

	<%= form_for(@question) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>		
		<%=f.label :subject %>
		<%= f.select :subject_id, options_from_collection_for_select(@subjects, 'id','title')	%> </br>
		<%= f.radio_button :question_type, @question.single_check, class: 'radio-controll' %>
	  <%= label :question_type, 'single check'%>
	  <%= f.radio_button :question_type, @question.multiple_check , class: 'radio-controll' %>
	  <%= label :question_type, 'multiple check'%>
	  <%= f.radio_button :question_type, @question.short_answer , class: 'radio-controll'%>
	  <%= label :question_type, 'short answer'%></br>
  	<div>
	  	<%= render partial: 'questions/radio_question', locals: {f: f} %>
	  	
	  	<%= render partial: 'questions/question', locals: {f: f} %>

	  	<%= render partial: 'questions/short_answer', locals: {f: f} %>
  	</div>
		<%= f.submit "Save", class: "btn btn-primary" %>
	<% end %>	
</div>	
