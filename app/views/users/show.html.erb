<% provide(:title, 'Subject list') %>
<h1> Test</h1>	
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<table border="1" style="width:100%">	
		  <tr>
		    <th>index</th>
		    <th>subject</th>		
		    <th>number of questions</th>
		    <th>time</th>
		    <th>Status</th>
		  </tr>
		  <% @subjects.each.with_index(1) do |subject, index| %>
		  <tr> 
		    <td><%= "#{index}" %></td>   	
		    <td><%= subject.title %></td>
		    <td><%= 20  %></td> 	
		    <td><%= subject.duration %> minutes</td>
		    <td>
			    <div id="status-<%= subject.id %>">
			    	<% case subject.status %>
			    	<% when "Started" %>
			    		<%= render partial: 'subjects/available', locals: {subject: subject} %>
			    	<% when "Ready" %>
			    		<%= render 'subjects/unavailable' %>
			    	<% end %>
			    </div>	
		    </td>
		  </tr> 
		  <% end %>
		</table>
	</div>
</div>	